model Prompt {
  id          String  @id @default(uuid())
  name        String
  prompt      String
  system      String?
  platform    String
  code        String
  promptVars  Json?
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  model Model @relation(fields: [code], references: [code])

  @@map("sys-prompt")
}
